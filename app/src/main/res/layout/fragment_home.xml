<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@drawable/corner_layout_bg"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVING\nROOM"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>


                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Switch Board"
                            android:textColor="@color/white"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textColor="#afd7d3"
                            android:textSize="16dp"/>

                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doors &amp; Windows"
                            android:textColor="#afd7d3"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Music"
                            android:textColor="#afd7d3"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Energy Usage"
                            android:textColor="#afd7d3"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textColor="#afd7d3"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ll_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KIDS PLAY\nROOM"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>


                    </LinearLayout>






                </RelativeLayout>





            </ScrollView>




        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.7"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_marginLeft="25dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Switch Board"/>

                        <View
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C0BEBE"/>



                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="13dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fan"/>

                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/device"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <com.bosphere.verticalslider.VerticalSlider
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginRight="20dp"
                                    app:vs_thumb_color="@color/colorPrimaryDark"
                                    app:vs_thumb_radius="10dp"
                                    android:progress="50"
                                    android:layout_marginBottom="5dp"
                                    app:vs_track_bg_color="@color/grey"
                                    app:vs_track_bg_thickness="5dp"
                                    app:vs_track_fg_color="@color/colorPrimaryDark" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="13dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chandelier"/>

                                    <ImageView
                                        android:layout_marginLeft="20dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/device"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>


                                <com.bosphere.verticalslider.VerticalSlider
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginRight="20dp"
                                    app:vs_thumb_color="@color/colorPrimaryDark"
                                    app:vs_thumb_radius="10dp"
                                    android:progress="50"
                                    android:layout_marginBottom="5dp"
                                    app:vs_track_bg_color="@color/grey"
                                    app:vs_track_bg_thickness="5dp"
                                    app:vs_track_fg_color="@color/colorPrimaryDark" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="13dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Wall Light"/>

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/device"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/ll_device"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="13dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Painting Spotlight"/>

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/device"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="25dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"/>

                        <View
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C0BEBE"/>

                        <RelativeLayout
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/ll_start"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentLeft="true"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MODE"/>


                                    <ImageView
                                        android:layout_marginLeft="20dp"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_voice_recognizer"/>


                                    <ImageView
                                        android:layout_marginLeft="20dp"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_voice_recognizer"/>

                                    <ImageView
                                        android:layout_marginLeft="20dp"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_voice_recognizer"/>




                                </LinearLayout>
                                
                                <LinearLayout
                                    android:layout_marginTop="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ENERGY USAGE"/>

                                    <LinearLayout
                                        android:layout_gravity="center"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_marginRight="10dp"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/iv_energy"/>


                                        <TextView
                                            android:textSize="16dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="2040 w"
                                            android:textColor="@color/colorPrimary"/>

                                    </LinearLayout>



                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="20dp"
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="HUMIDITY"/>


                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="44%"/>




                                </LinearLayout>

                            </LinearLayout>

                            <FrameLayout
                                android:layout_toLeftOf="@+id/ll_end"
                                android:layout_toRightOf="@+id/ll_start"
                                android:layout_marginTop="50dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">



                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                <me.tankery.lib.circularseekbar.CircularSeekBar
                                    android:id="@+id/seek"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    app:cs_circle_style="round"
                                    app:cs_circle_stroke_width="8dp"
                                    app:cs_pointer_stroke_width="24dp"
                                    app:cs_pointer_halo_width="10dp"
                                    app:cs_progress ="80"
                                    android:rotation="270"
                                    app:cs_lock_enabled ="true"
                                    app:cs_start_angle ="-105"
                                    app:cs_end_angle ="105"
                                    app:cs_pointer_halo_border_width="10dp"
                                    app:cs_circle_color ="@color/grey"
                                    app:cs_circle_progress_color ="@color/colorPrimary"
                                    app:cs_pointer_color = "@color/colorPrimaryDark"
                                    app:cs_pointer_halo_color = "@color/colorPrimary" />


                                    <RelativeLayout
                                        android:id="@+id/rlMain"
                                        android:gravity="center"
                                        android:layout_centerInParent="true"
                                        android:layout_width="125dp"
                                        android:background="@drawable/circle_drawable_with_stroke"
                                        android:layout_height="125dp">


                                        <com.github.florent37.shapeofview.shapes.CircleView
                                            android:layout_marginBottom="3dp"
                                            android:layout_width="110dp"
                                            android:layout_height="110dp"
                                            android:background="@color/white"
                                            android:layout_centerInParent="true"
                                            android:elevation="2dp">
                                        </com.github.florent37.shapeofview.shapes.CircleView>



                                        <RelativeLayout
                                            android:layout_width="40dp"
                                            android:layout_centerInParent="true"
                                            android:layout_height="40dp">

                                            <TextView
                                                android:id="@+id/tvNum"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="26"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="24dp"
                                                android:textStyle="bold"/>

                                            <TextView
                                                android:layout_alignParentTop="true"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:layout_marginTop="3dp"
                                                android:textStyle="bold"
                                                android:textSize="10dp"
                                                android:layout_toRightOf="@+id/tvNum"
                                                android:textColor="@color/colorPrimary"/>




                                        </RelativeLayout>






                                    </RelativeLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:orientation="horizontal"
                                    android:layout_gravity="bottom|center">

                                    <ImageView
                                        android:tint="@color/grey"
                                        android:layout_marginLeft="40dp"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentTop="true"
                                        android:src="@drawable/ic_plus"/>


                                    <ImageView
                                        android:id="@+id/iv"
                                        android:tint="@color/grey"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:rotation="-90"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_logout"/>

                                    <ImageView
                                        android:layout_alignParentTop="true"
                                        android:layout_marginRight="40dp"
                                        android:tint="@color/grey"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:rotation="-90"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/ic_sun"/>



                                </RelativeLayout>


                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/ll_end"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_marginRight="20dp"
                                        android:textSize="14dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SYSTEM"/>



                                    <TextView
                                        android:layout_marginRight="20dp"
                                        android:textSize="16dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_height="wrap_content"
                                        android:text="C"/>


                                    <TextView
                                        android:textSize="16dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="F"/>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_gravity="end"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_marginRight="15dp"
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TIMER"/>

                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="OFF"/>




                                </LinearLayout>



                                <RelativeLayout
                                    android:elevation="10dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/circle_lay_bg"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp">

                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:tint="@color/white"
                                    android:src="@drawable/ic_plus"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"/>

                                </RelativeLayout>

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"></LinearLayout>






                </LinearLayout>


            </ScrollView>





        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:background="#C2C0C0"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="match_parent">


            <RelativeLayout
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/custom_layout_border"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Scenes"/>


                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:elevation="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_lay_bg"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <ImageView
                        android:tint="@color/white"
                        android:src="@drawable/ic_plus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </RelativeLayout>




            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                app:cardPreventCornerOverlap="true"
                                android:layout_margin="4dp"
                                app:cardElevation="4dp"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="2dp"
                                android:layout_width="120dp"
                                app:cardBackgroundColor="@color/colorPrimary"
                                android:layout_height="120dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="10dp"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="STUDY"/>



                                </RelativeLayout>



                            </android.support.v7.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                app:cardPreventCornerOverlap="true"
                                android:layout_margin="4dp"
                                app:cardElevation="4dp"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="2dp"
                                android:layout_width="120dp"
                                app:cardBackgroundColor="#3c6466"
                                android:layout_height="120dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:textSize="14dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="10dp"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="PARTY"/>



                                </RelativeLayout>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
