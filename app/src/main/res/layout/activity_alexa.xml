<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AlexaActivity">


    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexa, what's the weather\nlike today.?"/>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv"
                android:layout_alignParentBottom="true"
                android:textSize="25dp"
                android:textColor="@color/grey_cool"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It's a pleasant 32"/>


            <TextView
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/tv"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right|top"
                android:textSize="18dp"
                android:textColor="@color/grey_cool"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'C"/>


        </RelativeLayout>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlToggle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/alexa"
            android:id="@+id/image_roulette"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/rlRotate"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true">


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="50dp"
                android:background="@drawable/custom_circle_layout_with_stroke"
                android:layout_height="50dp">



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="50dp"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_circle_layout_with_stroke"
                android:layout_height="50dp">



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="50dp"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_circle_layout_with_stroke"
                android:layout_height="50dp">



            </RelativeLayout>


        </RelativeLayout>







    </RelativeLayout>





</RelativeLayout>
</layout>